<p>
  <strong>Name:</strong>
  <%= @activity.name %>
</p>

<% Activity::ACTIVITIES.each do |acti| %>
    <% if acti == @activity.name %>
        <p><%= image_tag Activity::IMAGES[@activity.name], class: 'activity-img img-fluid shadow' %></p>
    <% end %>
<% end %>

<p>
  <strong>Description:</strong>
  <%= @activity.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @activity.user_id %>
</p>

<%= link_to 'Back', activities_path %>
